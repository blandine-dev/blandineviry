{% extends 'base.html.twig' %}

{% block title %}Pont{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center my-5">{{ pont.nom }}</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ pont.id }}</td>
            </tr> #}
            <tr>
                <th>Nom</th>
                <td>{{ pont.nom }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ pont.photo }}</td>
            </tr>
            <tr>
                <th>Longueur</th>
                <td>{{ pont.longueur }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ pont.lieu }}</td>
            </tr>
            <tr>
                <th>Architecte</th>
                <td>{{ pont.architecte }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ pont.presentation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pont_index') }}"class="btn btn-success mb-3">Retour</a>

    <a href="{{ path('pont_edit', {'id': pont.id}) }}" class="btn btn-primary mb-3 ml-3">Modifier</a>

    {{ include('pont/_delete_form.html.twig') }}
</div>
{% endblock %}
